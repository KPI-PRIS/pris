generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  FAN
  COACH
  PLAYER
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String   @unique
  password     String
  phone        String?
  registeredAt DateTime @default(now())
  role         Role     @default(FAN)
  image_url    String   @default("https://cdn-icons-png.flaticon.com/512/7458/7458816.png")
}
